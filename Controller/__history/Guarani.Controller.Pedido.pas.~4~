unit Guarani.Controller.Pedido;

interface

uses Guarani.Model.Pedido, System.SysUtils, System.Types, System.UITypes, System.Classes,
     System.Variants, FMX.Dialogs;

type
  TControlPedido = class
  private

  public
    procedure Gravar(Produto: TPedido);
  end;

implementation

{ TControlProduto }

procedure TControlProduto.Gravar(Produto: TPedido);
begin
  if Produto.ID = 0 then
    raise Exception.Create('Id do produto em branco');

  if Produto.Descricao = '' then
    raise Exception.Create('Descrição em branco');

  if Produto.Marca = '' then
    raise Exception.Create('Marca em branco');

  if Produto.Preco <= 0 then
    raise Exception.Create('Preço em branco');

  Produto.Gravar(Produto);
end;

end.
